{
  "name": "fastcompare",
  "displayName": "Fast Compare",
  "icon": "src/img/icon.png",
  "description": "Enables fast way of comparing two files via Context Menu Action on Text Editor Title.",
  "repository": {
    "url": "https://github.com/davidKolar175/fast-compare"
  },
  "version": "1.2.2",
  "author": {
    "name": "David Kolář"
  },
  "publisher": "DavidKol",
  "engines": {
    "vscode": "^1.70.0"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:fastcompare.compareWithActiveFile",
    "onCommand:fastcompare.compareWithTab"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fastcompare.compareWithActiveFile",
        "title": "Compare with Active File"
      },
      {
        "command": "fastcompare.compareWithTab",
        "title": "Compare with Tab"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "fastcompare.compareWithActiveFile",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "when": "!explorerResourceIsFolder && isFileSystemResource && (activeEditor == 'workbench.editors.files.textFileEditor' || activeEditor == 'workbench.editors.textResourceEditor')",
          "command": "fastcompare.compareWithActiveFile",
          "group": "1_diff"
        }
      ],
      "editor/title/context": [
        {
          "when": "true",
          "command": "fastcompare.compareWithActiveFile",
          "group": "1_diff"
        }
      ]
    },
    "keybindings": [
      {
        "command": "fastcompare.compareWithTab",
        "key": "ctrl+alt+c",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "publish-ext": "vsce publish",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}